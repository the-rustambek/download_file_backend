<!-- HTML ning bazi joylarini o'xshata olmadim, o'zimnikini o'chirib tashlab Sarvarnikidan ko'chirdim, versatkasini -->



<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Download file</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body class=" d-flex align-items-center justify-content-center vh-100" style="background-color: blueviolet;">
    <div>
        <h2 class="text-center text-light mb-4 pb-4">
            Assalomu alaykum, nima qilmoqchisiz ?
        </h2>

        <div class="d-flex mt-3 row justify-content-center">
            <button class="btn btn-large btn-primary px-4 col-5" type="button" data-bs-toggle="modal"
                data-bs-target="#exampleModal">Narsa Yuklash</button>


            <button class="btn ms-3 btn-large btn-warning px-4 col-5" type="button" data-bs-toggle="modal"
                data-bs-target="#receive">Yuklab olish</button>
        </div>
    </div>

    <!-- send file modal -->

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"> Fayl jo'natishga Xush kelibsiz</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- action="/send_data"  -->
                    <form id="sendData" class="form-control" method="POST"
                        enctype="multipart/form-data" autocomplete="off">
                        <input type="password" class="form-control mt-3" name="password" minlength="3"
                            placeholder="Parol kiriting" required>
                        <input type="file" class="form-control mt-3" name="file" required>
                        <button type="submit" class="btn mt-3 btn-primary">Fayl jo'natishga Xush kelibsiz</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <!-- receive file modal -->
    <div class="modal fade" id="receive" tabindex="-1" aria-labelledby="receive" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Fayllarni qabul qilish</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- action="/receive" -->
                    <form  class="form-control" method="POST" autocomplete="off">
                        <input type="text" class="form-control" minlength="3" name="password"
                            placeholder="Faylning parolini kiriting">
                        <button class="btn btn-danger mt-3" type="submit">Qabul qilish</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous">
    </script>
</body>

</html>